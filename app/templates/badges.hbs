<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Badges</title>
</head>


<body>

    <div class="jumbotron">
        <h1>Badges</h1>
        <div class="row">
            <div class="text-center">
                <div class="btn-group" role="group" aria-label="Basic example">
                    {{#link-to "badges"}}<button type="button" class="btn btn-success">Achievements</button>{{/link-to}}
                    {{#link-to "home"}}<button type="button" class="btn btn-success">Home</button>{{/link-to}}
                    {{#link-to "trees"}}<button type="button" class="btn btn-success">Trees</button>{{/link-to}}
                </div>
            </div>
        </div>
    </div>

    {{#each model as |badge|}}
        {{#link-to "badgedetails" badge}}
            <a class="btn btn-info btn-bar" role="button">
                <img src={{badge.Image_Path}} height="50" width="50">
                {{badge.Name}}
                <p>{{badge.Summary}}</p>
            </a>
        {{/link-to}}
    {{else}}
        No Badges
    {{/each}}

</body>

{{outlet}}
