<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Badges</title>
</head>


<body ontouchstart=""><!-- ontouchstart="" enables low-delay CSS transitions. -->

    <div class="header clearfix">
        <nav>
          <ul class="nav nav-pills pull-right">
            <li role="presentation">{{#link-to "home"}}Home{{/link-to}}</li>
            <li role="presentation">{{#link-to "tours"}}Tours{{/link-to}}</li>
            <li role="presentation">{{#link-to "trees"}}Trees{{/link-to}}</li>
            <li role="presentation" class="active">{{#link-to "badges"}}Badges{{/link-to}}</li>
            <li role="presentation">{{#link-to "about"}}About{{/link-to}}</li>
            <li role="presentation">{{#link-to "settings"}}Settings{{/link-to}}</li>
          </ul>
        </nav>
    </div>

    <div class="jumbotron">
        <h1>Badges</h1>
    </div>

    {{#each model as |badge|}}
        {{#link-to "badgedetails" badge}}
            <a class="btn btn-info btn-bar" role="button">
                <img src={{badge.Image_Path}} height="50" width="50">
                {{badge.Name}}
                <p>{{badge.Summary}}</p>
            </a>
        {{/link-to}}
    {{else}}
        No Badges
    {{/each}}

</body>

{{outlet}}
