<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Settings</title>
</head>

<body ontouchstart=""><!-- ontouchstart="" enables low-delay CSS transitions. -->

    <div class="header clearfix">
        <nav>
          <ul class="nav nav-pills pull-right">
            <li role="presentation">{{#link-to "home"}}Home{{/link-to}}</li>
            <li role="presentation">{{#link-to "tours"}}Tours{{/link-to}}</li>
            <li role="presentation">{{#link-to "trees"}}Trees{{/link-to}}</li>
            <li role="presentation">{{#link-to "badges"}}Badges{{/link-to}}</li>
            <li role="presentation">{{#link-to "about"}}About{{/link-to}}</li>
            <li role="presentation" class="active">{{#link-to "settings"}}Settings{{/link-to}}</li>
          </ul>
        </nav>
    </div>

    <div class="jumbotron">
        <h1>Settings</h1>
    </div>
    
    <div class="needsloading">
        <a class="btn btn-info btn-bar" role="button">
            <div class="row">
                <div class="col-xs-6 col-sm-4 col-md-2"><img src="assets/Icon-placeholder.svg" height="50" width="50"> Location</div> 
                <div class="col-xs-6 col-sm-4 col-md-2"><input class="form-control" type="checkbox" checked></div>
            </div>
            <p>Turn GPS on or off</p>
        </a>
        <a class="btn btn-info btn-bar" role="button">
            <div class="row">
                <div class="col-xs-6 col-sm-4 col-md-2"><img src="assets/Icon-placeholder.svg" height="50" width="50"> Proximity</div> 
                <div class="col-xs-6 col-sm-4 col-md-2"><input class="form-control" type="checkbox" checked></div>
            </div>
            <p>Turn bluetooth on or off</p>
        </a>
        <a class="btn btn-info btn-bar" role="button">
            <div class="row">
                <div class="col-xs-6 col-sm-4 col-md-2"><img src="assets/Icon-placeholder.svg" height="50" width="50"> Alert</div> 
                <div class="col-xs-6 col-sm-4 col-md-2"><input class="form-control" type="checkbox" checked></div>
            </div>
            <p>Recieve an alert when you are near a tree</p>
        </a>
        <a class="btn btn-info btn-bar" role="button">
            <div class="row">
                <div class="col-xs-6 col-sm-4 col-md-2"><img src="assets/Icon-placeholder.svg" height="50" width="50"> Delete App Data </div> 
                <div class="col-xs-6 col-sm-4 col-md-2"><button type="button" class="btn btn-primary">Delete </button></div>
            </div>
            <p>Remove all your seen trees and badges</p>
        </a>
    </div>

</body>
{{outlet}}
